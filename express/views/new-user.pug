div(style='display:flex; flex-direction:column; justify-content:center; align-items:center; height:80%')
    h1 Create user 
    form(action='/', method='post', style='display:flex; flex-direction:column; width: 20%;')
        label(for='fullname') Fullname
        input(type="text", id="fullname", name="fullname", required)

        label(for='email') Email
        input(type="text", id="email", name="email", required)

        label(for='password') Password
        input(type="text", id="password", name="password", required)

        button(type='submit', style='margin-top:5%') Submit